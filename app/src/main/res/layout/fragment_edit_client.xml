       <org.itech.vmmc.ClearableAutoCompleteTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/font_size_small"
           android:id="@+id/institution"
           android:layout_marginLeft="200dp"
           android:layout_marginRight="50dp"
           android:layout_alignParentEnd="true"
           android:layout_alignParentStart="true"
           android:layout_toEndOf="@+id/textViewInstitution"
           android:layout_below="@+id/textViewLocation"
           android:paddingTop="12dp"
           android:maxLines="1" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:textSize="@dimen/font_size_small"
           android:text="@string/GroupActivity"
           android:id="@+id/textViewGroupActivity"
           android:paddingTop="12dp"
           android:layout_below="@+id/textViewInstitution" />

       <Spinner
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/group_activity"
           android:textSize="@dimen/font_size_small"
           android:layout_marginLeft="200dp"
           android:layout_marginRight="50dp"
           android:layout_alignParentEnd="true"
           android:layout_alignParentStart="true"
           android:layout_toEndOf="@+id/textViewGroupActivity"
