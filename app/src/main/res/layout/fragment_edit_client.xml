    <ImageView
        android:id="@+id/imageViewVMMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/itech50" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_small"
        android:text="@string/first_name"
        android:id="@+id/textViewFirstName"
        android:paddingTop="128dp"
        android:layout_below="@+id/imageViewVMMC"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_small"
        android:id="@+id/first_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/textViewFirstName"
        android:paddingTop="128dp"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_small"
        android:text="@string/last_name"
        android:id="@+id/textViewLastName"
        android:paddingTop="12dp"
        android:layout_below="@+id/textViewFirstName" />

   <EditText
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="@dimen/font_size_small"
       android:id="@+id/last_name"
       android:layout_marginLeft="200dp"
       android:layout_marginRight="50dp"
       android:layout_alignParentEnd="true"
       android:layout_alignParentStart="true"
       android:layout_toEndOf="@+id/textViewLastName"
       android:layout_below="@+id/textViewFirstName"
       android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_small"
        android:text="@string/national_id"
        android:id="@+id/textViewNationalId"
        android:paddingTop="12dp"
        android:visibility="invisible"
        android:layout_below="@+id/textViewLastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_small"
        android:id="@+id/national_id"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/textViewNationalId"
        android:layout_below="@+id/textViewLastName"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_small"
        android:text="@string/phone"
        android:id="@+id/textViewPhone"
        android:paddingTop="12dp"
        android:layout_below="@+id/textViewNationalId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_small"
        android:id="@+id/phone_number"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/textViewPhone"
        android:layout_below="@+id/textViewNationalId"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_small"
        android:text="@string/status"
        android:id="@+id/textViewStatus"
        android:paddingTop="12dp"
        android:layout_below="@+id/textViewPhone" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textSize="@dimen/font_size_small"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/textViewStatus"
        android:paddingTop="12dp"
        android:layout_below="@+id/textViewPhone" />


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:textSize="@dimen/font_size_small"
      android:text="@string/constituency"
      android:id="@+id/textViewLocation"
      android:paddingTop="12dp"
      android:layout_below="@+id/textViewStatus" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vmmclocation"
        android:textSize="@dimen/font_size_small"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/textViewLocation"
        android:paddingTop="12dp"
        android:layout_below="@+id/textViewStatus" />



  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:textSize="@dimen/font_size_small"
      android:text="@string/institution"
      android:id="@+id/textViewInstitution"
      android:paddingTop="12dp"
      android:layout_below="@+id/textViewLocation" />

