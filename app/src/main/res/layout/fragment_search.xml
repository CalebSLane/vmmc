<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.itech.vmmc.CreateFragment">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/name"
           android:id="@+id/textView0"
           android:paddingTop="128dp"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/search"
           />


    <org.itech.vmmc.ClearableAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_below="@+id/textView0"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/national_id"
       android:id="@+id/textView2"
       android:paddingTop="12dp"
       android:layout_below="@+id/search"
       android:layout_alignStart="@+id/first_name" />

   <org.itech.vmmc.ClearableAutoCompleteTextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/first_name"
       android:layout_below="@+id/textView2"

       android:layout_marginLeft="78dp"
       android:layout_marginRight="78dp"
       android:layout_alignParentEnd="true"
       android:layout_alignParentStart="true"
       android:singleLine="true" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/facility_name"
           android:id="@+id/textView3"
           android:paddingTop="12dp"
           android:layout_below="@+id/first_name"
           android:layout_alignStart="@+id/last_name" />

    <org.itech.vmmc.ClearableAutoCompleteTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/last_name"
           android:layout_below="@+id/textView3"
           android:layout_marginLeft="78dp"
           android:layout_marginRight="78dp"
           android:layout_alignParentEnd="true"
           android:layout_alignParentStart="true"
           android:singleLine="true" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/assessment_name"
              android:id="@+id/textView4"
              android:paddingTop="12dp"
              android:layout_below="@+id/last_name"
              android:layout_alignStart="@+id/assessment_type" />

          <Spinner
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/assessment_type"

              android:layout_below="@+id/textView4"
              android:layout_marginLeft="78dp"
              android:layout_marginRight="78dp"
              android:layout_alignParentEnd="true"
              android:layout_alignParentStart="true"/>

    <!--       -->
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Search"
                  android:id="@+id/btnSearch"
                  android:paddingTop="12dp"
                  android:layout_below="@+id/assessment_type"
                  android:layout_alignEnd="@+id/assessment_type"
                  android:layout_marginTop="32dp" />


</RelativeLayout>
